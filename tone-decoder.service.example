[Unit]
Description=Dual-Tone Sequential Paging Decoder
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/Dual-Tone-Decoder
Environment="PATH=/opt/Dual-Tone-Decoder/venv/bin"
ExecStart=/opt/Dual-Tone-Decoder/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000 --workers 4
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
